{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
{%- if cookiecutter.use_renovate == 'y' %}
  enabled: true,
{%- else %}
  enabled: false,
{%- endif %}
  extends: [
    ':dependencyDashboard',
    ':semanticPrefixFixDepsChoreOthers',
    ':ignoreModulesAndTests',
    ':prHourlyLimit2',
    ':prConcurrentLimit10',
    'group:monorepos',
    'group:recommended',
    'workarounds:all',
    'schedule:quarterly',
    ':semanticCommits',
    'docker:enableMajor',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':gitSignOff',
  ],
  configMigration: true,
  minimumReleaseAge: '7 days',
  packageRules: [
    {
      matchDepTypes: [
        'action',
      ],
      labels: [
        'kind/dependencies',
        'kind/infrastructure',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
        'pinDigest',
      ],
      automerge: true,
    },
  ],
  labels: [
    'kind/dependencies',
  ],
  vulnerabilityAlerts: {
    labels: [
      'kind/dependencies',
      'kind/security',
    ],
  },
  rebaseLabel: 'renovate/rebase',
  stopUpdatingLabel: 'renovate/stop-updating',
}
